            <string>//if(objDayNight.time &gt;= 120 * 5 &amp;&amp; objDayNight.time &lt; 120 * 18){

if(objDayNight.dayNight &lt;= 80){
    //reset flame and timer
    //alpha = 0;
    //step = 0;
    
    //force set flame to start put out
    if(flameFrame &gt; 8){
        flameFrame = 8;
    }
    else if(flameFrame &gt; -1){
        //need 8 frames to put off the torch
        //there are total 8 pictures(from 7 to 0)
        alpha *= flameFrame / 8;
        flameFrame -= 1;
    }
    else{
        //flame has put out
        flameFrame = -1;
        step = 0;
        alpha = 0;
    }
}
else{
    step = (step + 1) % 30;
    
    //alpha range (0.3,0.6)
    //if(step % 2 == 0)alpha = random(0.3) + 0.3;
    
    //flame frames
    // 0 - 7  start lit
    // 8 - 10 lit
   
    if(flameFrame == -1)flameFrame = 0;
    else if(flameFrame &lt; 8){
        flameFrame += 1;
        if(step % 2 == 0)alpha = (random(0.3) + 0.3) * flameFrame / 8;
    }
    else{
        //flame light mask alpha reroll every 2f
        //flame frames change between 8, 9 and 10, switch frame every 2f
        if(step % 2 == 0){
            alpha = random(0.3) + 0.5;   
        }
        flameFrame = irandom(2) + 8;
    }    
    
}
